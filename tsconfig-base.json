{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
        "chai",
        "chai-as-promised",
        "chai-subset",
        "mocha",
        "node",
        "sinon-chai"
    ],

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,

    "lib": ["es2017", "esnext.asynciterable"],

    "declaration": true,
    "sourceMap": true,
    "pretty": true
  }
}
